function formTransition(old_form, pipe, next_form_area, partial, topper_target)
{

// apply css rules to already submitted form
$(old_form).addClass("old_form") 

// Pipe transition to next form
$(pipe).animate({ height: "500px" }, {duration: 500})

//wait for pipe animation so that it doesn't push next form
setTimeout(continueExecution, 400)

function continueExecution()
{

	// Render the next form
	$(next_form_area).html(partial)
	//should be 590px down

	//scroll to next form
	$('html, body').animate({ scrollTop: $(topper_target).offset().top }, 1000)

}

} 

